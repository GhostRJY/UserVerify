<Window x:Class="UserVerify_WPF.ShowUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserVerify_WPF"
        mc:Ignorable="d"
        Title="ShowUser" Height="324" Width="549" Background="#FF6F69B7">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="133*"/>
            <ColumnDefinition Width="55*"/>
        </Grid.ColumnDefinitions>
        <Image x:Name="ImageUser" HorizontalAlignment="Left" Height="185" Margin="77,29,0,0" VerticalAlignment="Top" Width="231" Stretch="UniformToFill"/>
        <TextBlock HorizontalAlignment="Left" Margin="9,58,0,0" TextWrapping="Wrap" Text="Логин" VerticalAlignment="Top" Height="16" Width="100" Grid.Column="1"/>
        <TextBlock x:Name="userName" HorizontalAlignment="Left" Margin="9,87,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="16" Width="100" Grid.Column="1"/>
        <TextBlock HorizontalAlignment="Left" Margin="9,124,0,0" TextWrapping="Wrap" Text="Пароль" VerticalAlignment="Top" Height="16" Width="100" Grid.Column="1"/>
        <TextBlock x:Name="userPass" HorizontalAlignment="Left" Margin="9,154,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="16" Width="100" Grid.Column="1"/>
        <Button x:Name="PictureLoad" Content="Load Picture" HorizontalAlignment="Left" Margin="105,235,0,0" VerticalAlignment="Top" Width="150" Click="PictureLoad_Click"/>

    </Grid>
</Window>
